# Django Settings
DEBUG=True
SECRET_KEY=your-super-secret-key-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
# SQLite (development)
DATABASE_URL=sqlite:///db.sqlite3
# PostgreSQL (production)
# DATABASE_URL=postgres://user:password@localhost:5432/bunoraa

# Redis (optional - for caching and Celery)
REDIS_URL=redis://localhost:6379/0

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# For production:
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# DEFAULT_FROM_EMAIL=Bunoraa <noreply@bunoraa.com>

# Stripe Payment
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal (optional)
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# AWS S3 Storage (optional - for file uploads)
USE_S3=False
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_STORAGE_BUCKET_NAME=bunoraa-media
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=your-bucket.s3.amazonaws.com

# Social Authentication (optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Security
CSRF_COOKIE_SECURE=False
SESSION_COOKIE_SECURE=False
# Set to True in production with HTTPS

# Site Configuration
SITE_NAME=Bunoraa
SITE_URL=http://localhost:8000
SITE_CURRENCY=USD
SITE_TIMEZONE=UTC

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Sentry (optional - error tracking)
SENTRY_DSN=

# Google Analytics (optional)
GA_TRACKING_ID=

# Currency API (optional - for exchange rates)
EXCHANGE_RATE_API_KEY=
