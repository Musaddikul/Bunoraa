{
  "name": "bunoraa",
  "version": "1.0.0",
  "description": "Bunoraa E-Commerce Platform",
  "keywords": [],
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "build:clean": "rimraf ./static/css/styles.css || exit 0",
    "build:js": "esbuild static/js/app.js --bundle --outfile=static/js/app.bundle.js --minify --sourcemap",
    "build:js:analyze": "esbuild static/js/app.js --bundle --outfile=static/js/app.bundle.js --minify --sourcemap --metafile=static/js/esbuild-meta.json",
    "build:tailwind": "cross-env NODE_ENV=production postcss ./static/css/input.css -o ./static/css/styles.css",
    "build": "npm run build:clean && npm run build:js && npm run build:tailwind",
    "dev:css": "cross-env NODE_ENV=development TAILWIND_DISABLE_TOUCH=true postcss ./static/css/input.css -o ./static/css/styles.css --watch --poll",
    "dev:css:fast": "cross-env NODE_ENV=development TAILWIND_DISABLE_TOUCH=true TAILWIND_MODE=watch postcss ./static/css/input.css -o ./static/css/styles.css --watch --poll 100",
    "dev": "npm run dev:css:fast",
    "deploy:worker": "npx wrangler deploy",
    "pages:deploy": "npm run build && echo 'Pages deploy: static build only; worker deploy is handled by GitHub Actions.'"
  },
  "dependencies": {
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.1"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.9",
    "cross-env": "^7.0.3",
    "cssnano": "^7.1.2",
    "esbuild": "^0.27.2",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.1",
    "rimraf": "^6.1.2"
  }
}
